#!/bin/sh

set -e

# Go to the root of the project
cd "$(dirname "$0")/.."

# Clean up the generated files
rm -rf ./src/generated
rm -rf ./__tests__/generated
mkdir -p ./src/generated/widgets
mkdir -p ./__tests__/generated/widgets

# Generate the GIR types
pnpm run girs:generate
rm -f ./src/generated/girs/*-import.js

# Generate the types
node dist/index.js .

# Format the generated files
pnpm exec prettier --write ./src/generated/**/*.{ts,tsx,js}
pnpm exec prettier --write ./__tests__/generated/**/*.{ts,tsx,js}
