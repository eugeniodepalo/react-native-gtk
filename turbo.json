{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": [
    "DISPLAY",
    "XDG_RUNTIME_DIR",
    "PULSE_SERVER",
    "DBUS_SESSION_BUS_ADDRESS"
  ],
  "tasks": {
    "react-native-gtk4#build": {
      "dependsOn": ["^build", "codegen"],
      "outputs": ["dist/**"]
    },
    "codegen": {
      "dependsOn": ["codegen#build"],
      "inputs": ["girs/**"],
      "outputs": ["src/generated/**", "__tests__/generated/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
